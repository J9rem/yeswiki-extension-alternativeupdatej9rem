<div class="page">
    <form action="{{ url({handler:'diff'}) }}" method="post">
        <table border="0" cellspacing="0" cellpadding="1">
            <tr>
                <td>
                    <input type="submit" value="Voir Différences" />
                    <span class="current-revision-text"> de la version actuelle avec</span>
                </td>
                <td>
                    <input type="checkbox" name="fastdiff"/>Affichage simplifié
                </td>
            </tr>
            {% for page in pages|slice(0,20) %}
                <tr {% if loop.first %}class="current-page-revision"{% endif %}>
                    <td class="first-revisions-selector">
                        <input type="radio" name="a" value="{{ page.id }}" {% if loop.first %}checked="checked"{% endif %}/>
                    </td>
                    <td>
                        <input type="radio" name="b" value="{{ page.id }}" {% if loop.index == 2 %}checked="checked"{% endif %}/>
                    </td>
                    <td>&nbsp;<a href="{{ url({handler:'show',params:{time:page.time}}) }}">{{ page.time }}</a></td>
                    <td>&nbsp;par {{ format(page.user)|raw }}</td>
                </tr>
            {% endfor %}
        </table>
    </form>
</div>