<table class="table table-striped table-condensed table-updates">
  <thead>
    <tr>
        <th>{{ _t('AU_NAME') }}</th>
        <th>{{ _t('AU_INSTALLED_REVISION') }}</th>
        <th>{{ _t('AU_AVAILABLE_REVISION') }}</th>
        <th></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
      {% for ext in exts %}
        <tr>
            <td>
                <strong>{{ ext.name }}</strong>
                <br />
                <small>{{ ext.description }}</small>
            </td>
            <td>
                {% if ext.installed %}
                    {{ ext.localRelease }}
                {% else %}
                    {{ _t('AU_ABSENT') }}
                {% endif %}
            </td>
            <td>
                {{ ext.release }}
            </td>
            <td>
                {% if isAdmin and ext.installed and not (ext.isTheme) %}
                    {% if not ext.active %}
                        {% if not isHibernated %}
                            <a  href="{{ url({params:{activate:ext.name}}) }}"
                                class="btn btn-xs btn-primary"
                                title="{{ _t('ALTERNATIVEUPDATE_ACTIVATE_EXT') }}"
                            >
                                {{ _t('ALTERNATIVEUPDATE_ACTIVATE_EXT') }}
                            </a>
                        {% else %}
                            <button disabled
                                class="btn btn-xs btn-primary"
                                title="{{ _t('WIKI_IN_HIBERNATION') }}"
                                data-toggle="tooltip"
                                data-placement="bottom"
                            >
                                {{ _t('ALTERNATIVEUPDATE_ACTIVATE_EXT') }}
                            </button>
                        {% endif %}
                    {% else %}
                        {% if not isHibernated %}
                            <a  href="{{ url({params:{deactivate:ext.name}}) }}"
                                class="btn btn-xs btn-danger"
                                title="{{ _t('ALTERNATIVEUPDATE_DEACTIVATE_EXT') }}"
                            >
                                {{ _t('ALTERNATIVEUPDATE_DEACTIVATE_EXT') }}
                            </a>
                        {% else %}
                            <button disabled
                                class="btn btn-xs btn-danger"
                                title="{{ _t('WIKI_IN_HIBERNATION') }}"
                                data-toggle="tooltip"
                                data-placement="bottom"
                            >
                                {{ _t('ALTERNATIVEUPDATE_DEACTIVATE_EXT') }}
                            </button>
                        {% endif %}
                    {% endif %}
                {% endif %}


            </td>
            <td>
                {% if isAdmin and ext.installed and ext.name != 'autoupdate' %}
                    {% if not isHibernated %}
                        <a  href="{{ baseUrl }}{{ ext.deleteLink }}"
                            class="btn btn-xs btn-danger"
                            title="{{ _t('AU_DELETE_EXT') }}"
                        >
                            {{ _t('AU_DELETE_EXT') }}
                        </a>
                    {% else %}
                        <button disabled
                            class="btn btn-xs btn-danger"
                            title="{{ _t('WIKI_IN_HIBERNATION') }}"
                            data-toggle="tooltip"
                            data-placement="bottom"
                        >
                            {{ _t('AU_DELETE_EXT') }}
                        </button>
                    {% endif %}
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
